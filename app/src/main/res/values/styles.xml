<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
<!--        Theme -->
        <item name="actionBarTheme">@style/MainActionBar</item>
        <item name="android:fontFamily">@font/bitter</item>

<!--        Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

<!--        Styles -->
        <item name="FAB">@style/FAB</item>
    </style>

    <style name="MainActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="colorPrimary">@android:color/white</item>
        <item name="background">@android:color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
</resources>
